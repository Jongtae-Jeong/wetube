extends layouts/main
include mixin/videoBlock


block content
    .search__header
        h3 Searhing for #{searchingBy}
    .home-videos
        each video in videos
            +videoBlock({
                videoFile:video.fileUrl,
                title:video.title,
                views:video.views,
                id:video.id
            })
        if videos.length === 0
            h5 NO Video Found